<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
</head>
<body>
    <% let email = otp_form ? user.email : "" %>
    <form action="/reset/undefined" method="post">
        <input type="email" placeholder="Enter your email" name="email" value="<%= email %>">
        <button>Submit</button>
    </form>
    <% if(otp_form){ %>
    <form action="/otp_verification/<%= user.email %>" method="post">
        <input type="text" placeholder="Enter otp received on your Email:" name="otp">
        <button>Verify</button><br>
        <!-- <a href="/reset/<%= email %>">Resend otp</a> -->
    </form>
    <form action="/reset/<%= email %>" method="post">   
        <button>Resend Otp</button>
    </form>
<% } %>
</body>
</html>